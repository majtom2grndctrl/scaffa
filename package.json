{
  "name": "scaffa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-electron.mjs",
    "dev:demo": "concurrently \"pnpm dev\" \"pnpm -C demo/app run dev:local\"",
    "dev:renderer": "pnpm -C src/renderer dev",
    "build": "pnpm build:modules && pnpm build:electron && pnpm build:renderer",
    "build:modules": "node scripts/build-workspace-modules.mjs",
    "build:renderer": "pnpm -C src/renderer build",
    "build:electron": "node scripts/build-electron.mjs",
    "preview": "pnpm -C src/renderer preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "prepush": "pnpm test --run"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^4.0.17",
    "concurrently": "^9.2.1",
    "electron": "^32.2.0",
    "esbuild": "^0.25.10",
    "happy-dom": "^20.3.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@11.0.0-dev.1005+sha512.91f84a392eea348ea4852a182912d2520273a4336f933b78cc44bc931eb999923c097e9433a9b355adc1f725725ea99082fc9f032a559df832632e764c92c798"
}