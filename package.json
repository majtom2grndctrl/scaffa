{
  "name": "scaffa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-electron.mjs",
    "dev:demo": "concurrently \"pnpm dev\" \"pnpm -C demo/app run dev:local\"",
    "dev:renderer": "pnpm -C src/renderer dev",
    "build": "pnpm build:electron && pnpm build:renderer",
    "build:renderer": "pnpm -C src/renderer build",
    "build:electron": "node scripts/build-electron.mjs",
    "preview": "pnpm -C src/renderer preview"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^32.2.0",
    "esbuild": "^0.25.10",
    "typescript": "^5.6.3"
  }
}
